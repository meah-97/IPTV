<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MAXTV.Pages.SeriesPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="#0E1621"
    Title="Series">

    <Grid ColumnDefinitions="300,*">

        <!-- CATEGORIES (LEFT) -->
        <ScrollView Grid.Column="0">
            <VerticalStackLayout
                x:Name="CategoriesLayout"
                Spacing="0"
                Padding="0">

                <BindableLayout.ItemTemplate>
                    <DataTemplate>
                        <Button
                            Text="{Binding CategoryName}"
                            Clicked="OnCategoryClicked"
                            Focused="OnItemFocused"
                            Unfocused="OnItemUnfocused"
                            BackgroundColor="Transparent"
                            TextColor="White"
                            FontSize="22"
                            HeightRequest="60"
                            HorizontalOptions="Fill" />
                    </DataTemplate>
                </BindableLayout.ItemTemplate>

            </VerticalStackLayout>
        </ScrollView>

        <!-- SERIES SIDE (RIGHT) -->
        <Grid Grid.Column="1" RowDefinitions="Auto,*">

            <!-- SEARCH -->
            <Entry
                x:Name="SearchEntry"
                Placeholder="Search series..."
                TextColor="White"
                BackgroundColor="#1A2433"
                TextChanged="OnSearchTextChanged"
                Margin="8" />

            <!-- SERIES LIST -->
            <ScrollView Grid.Row="1">
                <VerticalStackLayout
                    x:Name="SeriesLayout"
                    Spacing="4"
                    Padding="8">

                    <BindableLayout.ItemTemplate>
                        <DataTemplate>
                            <Button
                                Text="{Binding Name}"
                                Clicked="OnSeriesClicked"
                                Focused="OnItemFocused"
                                Unfocused="OnItemUnfocused"
                                BackgroundColor="Transparent"
                                FontSize="22"
                                TextColor="White"
                                HeightRequest="56"
                                HorizontalOptions="Fill" />
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>

                </VerticalStackLayout>
            </ScrollView>

        </Grid>

        <!-- LOADING -->
        <ActivityIndicator
            x:Name="LoadingSpinner"
            Grid.ColumnSpan="2"
            IsRunning="False"
            IsVisible="{Binding IsRunning, Source={x:Reference LoadingSpinner}}"
            Color="#1E88E5"
            HorizontalOptions="Center"
            VerticalOptions="Center" />

    </Grid>
</ContentPage>
