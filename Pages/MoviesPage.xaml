<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MAXTV.Pages.MoviesPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="#0E1621"
    Title="Movies">

    <Grid ColumnDefinitions="300,*">

        <!-- CATEGORIES (LEFT) -->
        <ScrollView Grid.Column="0">
            <VerticalStackLayout
                x:Name="CategoriesLayout"
                Spacing="0"
                Padding="0">

                <BindableLayout.ItemTemplate>
                    <DataTemplate>
                        <Button
                            Text="{Binding CategoryName}"
                            Clicked="OnCategoryClicked"
                            Focused="OnCategoryFocused"
                            BackgroundColor="Transparent"
                            TextColor="White"
                            HeightRequest="60"
                            HorizontalOptions="Fill" />
                    </DataTemplate>
                </BindableLayout.ItemTemplate>

            </VerticalStackLayout>
        </ScrollView>

        <!-- MOVIES (RIGHT) -->
        <Grid Grid.Column="1" RowDefinitions="Auto,*">

            <!-- SEARCH (RIGHT SIDE ONLY) -->
            <Entry
                x:Name="SearchEntry"
                Placeholder="Search movies..."
                TextColor="White"
                BackgroundColor="#1A2433"
                TextChanged="OnSearchTextChanged"
                Margin="8" />

            <!-- MOVIES LIST -->
            <ScrollView Grid.Row="1">
                <VerticalStackLayout
                    x:Name="MoviesLayout"
                    Spacing="4"
                    Padding="8">

                    <BindableLayout.ItemTemplate>
                        <DataTemplate>
                            <Grid ColumnDefinitions="50, *" HeightRequest="60" Margin="0,2">
                                <Image
                                    Grid.Column="0"
                                    Source="{Binding PosterUrl}"
                                    Aspect="AspectFill"
                                    WidthRequest="50"
                                    HeightRequest="60"
                                    BackgroundColor="#232323" />

                                <Button
                                    Grid.Column="1"
                                    Text="{Binding Name}"
                                    Clicked="OnMovieClicked"
                                    BackgroundColor="Transparent"
                                    TextColor="White"
                                    HeightRequest="60"
                                    HorizontalOptions="Fill" />
                            </Grid>
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>

                </VerticalStackLayout>
            </ScrollView>

        </Grid>

        <!-- LOADING -->
        <ActivityIndicator
            x:Name="LoadingSpinner"
            Grid.ColumnSpan="2"
            IsRunning="False"
            IsVisible="{Binding IsRunning, Source={x:Reference LoadingSpinner}}"
            Color="#1E88E5"
            HorizontalOptions="Center"
            VerticalOptions="Center" />

    </Grid>
</ContentPage>
