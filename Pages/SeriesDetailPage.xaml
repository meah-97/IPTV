<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MAXTV.Pages.SeriesDetailPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="#0E1621"
    Title="Series Details">

    <Grid ColumnDefinitions="300,*">

        <!-- Seasons List -->
        <ScrollView
            Grid.Column="0"
            BackgroundColor="#132235">
            <VerticalStackLayout
                x:Name="SeasonsLayout"
                Spacing="0">

                <BindableLayout.ItemTemplate>
                    <DataTemplate>
                        <Button
                            Text="{Binding}"
                            TextColor="#E0E0E0"
                            BackgroundColor="Transparent"
                            HeightRequest="60"
                            FontSize="16"
                            Clicked="OnSeasonClicked"
                            HorizontalOptions="Fill">
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal">
                                        <VisualState.Setters>
                                            <Setter Property="BackgroundColor" Value="Transparent" />
                                            <Setter Property="TextColor" Value="#E0E0E0" />
                                        </VisualState.Setters>
                                    </VisualState>
                                    <VisualState x:Name="Focused">
                                        <VisualState.Setters>
                                            <Setter Property="BackgroundColor" Value="#1E88E5" />
                                            <Setter Property="TextColor" Value="White" />
                                        </VisualState.Setters>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                        </Button>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>

            </VerticalStackLayout>
        </ScrollView>

        <!-- Episodes List -->
        <ScrollView
            Grid.Column="1"
            BackgroundColor="#0E1621"
            Padding="10">

            <VerticalStackLayout
                x:Name="EpisodesLayout"
                Spacing="8">

                <BindableLayout.ItemTemplate>
                    <DataTemplate>

                        <!-- Episode row -->
                        <Grid ColumnDefinitions="*,140"
                              HeightRequest="60">

                            <!-- Episode title -->
                            <Button
                                Grid.Column="0"
                                Text="{Binding Title}"
                                TextColor="#E0E0E0"
                                BackgroundColor="Transparent"
                                BorderColor="#1565C0"
                                BorderWidth="1"
                                FontSize="18"
                                Clicked="OnEpisodeClicked"
                                HorizontalOptions="Fill">

                                <VisualStateManager.VisualStateGroups>
                                    <VisualStateGroup x:Name="CommonStates">
                                        <VisualState x:Name="Normal">
                                            <VisualState.Setters>
                                                <Setter Property="BackgroundColor" Value="Transparent" />
                                                <Setter Property="TextColor" Value="#E0E0E0" />
                                                <Setter Property="BorderColor" Value="#1565C0" />
                                            </VisualState.Setters>
                                        </VisualState>
                                        <VisualState x:Name="Focused">
                                            <VisualState.Setters>
                                                <Setter Property="BackgroundColor" Value="#1E88E5" />
                                                <Setter Property="TextColor" Value="White" />
                                                <Setter Property="BorderColor" Value="#1E88E5" />
                                            </VisualState.Setters>
                                        </VisualState>
                                    </VisualStateGroup>
                                </VisualStateManager.VisualStateGroups>
                            </Button>

                            <!-- Download / Play Local -->
                            <Button
                                Grid.Column="1"
                                Text="Download"
                                Clicked="OnEpisodeDownloadClicked"
                                BackgroundColor="#1E88E5"
                                TextColor="White"
                                HeightRequest="40"
                                VerticalOptions="Center"
                                HorizontalOptions="End"
                                CornerRadius="6"
                                FontSize="14" />

                        </Grid>

                    </DataTemplate>
                </BindableLayout.ItemTemplate>

            </VerticalStackLayout>
        </ScrollView>

        <!-- Loading -->
        <ActivityIndicator
            x:Name="LoadingSpinner"
            Grid.ColumnSpan="2"
            IsRunning="False"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            Color="White" />

    </Grid>
</ContentPage>
